<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_rectangle_58"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/to_come_in"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="162dp"
        android:layout_marginRight="163dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:lineSpacingExtra="2sp"
        android:text="@string/to_come"
        android:textAppearance="@style/title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/back"
        android:layout_width="7dp"
        android:layout_height="14dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="33dp"
        android:background="@drawable/ic_vector_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dd_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/some_id"
        android:textAppearance="@style/some_id"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/to_come_in"
        app:layout_constraintVertical_bias="0.147" />

    <TextView
        android:id="@+id/phone_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:lineSpacingExtra="1sp"
        android:text="@string/phone_id"
        android:textAppearance="@style/phone_id"
        android:translationY="-0.65sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dd_id" />

    <EditText
        android:id="@+id/edPhone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="62dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="62dp"
        android:padding="12dp"
        android:background="@drawable/shape_bck_etext_sms"
        android:textColor="#050505"
        android:textColorHint="#5C5C5C"
        android:hint="@string/number"
        android:inputType="phone"
        android:gravity="center"
        android:textAppearance="@style/number"
        app:layout_constraintEnd_toEndOf="@+id/dd_id"
        app:layout_constraintStart_toStartOf="@+id/dd_id"
        app:layout_constraintTop_toBottomOf="@+id/phone_id" />

    <EditText
        android:id="@+id/edSms"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:textColor="#050505"
        android:textColorHint="#5C5C5C"
        android:background="@drawable/shape_bck_etext_sms"
        android:gravity="center"
        android:hint="@string/sms"
        android:inputType="phone"
        android:textAppearance="@style/number"
        app:layout_constraintEnd_toEndOf="@+id/edPhone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/edPhone"
        app:layout_constraintTop_toBottomOf="@+id/edPhone" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/shape_bck_code"
        android:padding="12dp"
        android:text="@string/code"
        android:textAppearance="@style/number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />




</androidx.constraintlayout.widget.ConstraintLayout>